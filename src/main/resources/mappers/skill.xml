<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="skill">

    <sql id="sqlListAll">
       SELECT * FROM skill
    </sql>
<!--  查询  -->
    <!--  批量查询  -->
    <select id="list" resultType="com.sms.bean.Skill">
        <include refid="sqlListAll" />
    </select>
    <!--  单个查询  -->
    <select id="get" parameterType="int" resultType="com.sms.bean.Skill">
        SELECT * FROM skill WHERE id = #{id}
    </select>
    <!--  条件查询  -->
    <select id="search" parameterType="com.sms.bean.Skill" resultType="com.sms.bean.Skill">
        SELECT * FROM skill
        <where>
            <if test="id != null">
                AND id > #{id}
            </if>
            <if test="name != null">
                AND name LIKE #{name}
            </if>
        </where>
    </select>

<!--  增  -->
    <insert id="insert" parameterType="com.sms.bean.Skill">
        INSERT INTO skill(name, level) VALUES(#{name}, #{level})
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID();
        </selectKey>
    </insert>

<!-- 批量添加  -->
    <insert id="batchInsert" parameterType="List">
        INSERT INTO skill(name, level) VALUES
        <foreach collection="list" separator="," item="skill">
            (#{skill.name}, #{skill.level})
        </foreach>
    </insert>

<!--  更新 -->
    <update id="update" parameterType="com.sms.bean.Skill">
        UPDATE skill SET name = #{name}, level = #{level} WHERE id = #{id}
    </update>

<!--  删除  -->
    <delete id="delete" parameterType="int">
        DELETE FROM skill WHERE id = #{id}
    </delete>

<!--  批量删除  -->
    <delete id="batchDelete" parameterType="List">
        DELETE FROM skill WHERE id IN
        <foreach collection="list" separator="," item="id" open="(" close=")">
            #{id}
        </foreach>
    </delete>
</mapper>